<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_layout"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageView  android:id="@+id/news_img"
        		android:layout_width="50dip" 
    			android:layout_height="50dip"
    			android:layout_marginRight="5dip"
    			android:scaleType="centerInside"
    			android:contentDescription="@drawable/defaultnewsphotos"
    			/>
	    <RelativeLayout	android:id="@+id/you_id"
	        			android:orientation="vertical"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content">
			<TextView 
			android:id="@+id/news_title"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:lines="1"
			android:singleLine="true"
			android:ellipsize="end"
			android:textColor="#ccc"
			android:textSize="15sp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			/>
			<TextView 
			android:id="@+id/news_desc"
			android:layout_width="fill_parent"
			android:layout_height="28dip"
			android:gravity="center_vertical"
			android:lines="2"
			android:ellipsize="end"
			android:textColor="#666"
			android:textSize="12sp"
			android:layout_below="@id/news_title"
			android:layout_alignLeft="@id/news_title"
			/>
			<TextView 
			android:id="@+id/news_fbr"
			android:layout_width="120dp"
			android:layout_height="20dp"
			android:gravity="center_vertical"
			android:lines="1"
			android:singleLine="true"
			android:ellipsize="end"
			android:textColor="#ccc"
			android:textSize="11sp"
			android:layout_alignLeft="@id/news_desc"
			android:layout_below="@id/news_desc"
			/>
			<TextView 
			android:id="@+id/news_fbrq"
			android:layout_width="120dp"
			android:layout_height="20dp"
			android:gravity="center_vertical"
			android:lines="1"
			android:singleLine="true"
			android:ellipsize="end"
			android:textColor="#ccc"
			android:textSize="11sp"
			android:layout_below="@id/news_desc"
			android:layout_alignRight="@id/news_desc"
			/>
		</RelativeLayout>
</LinearLayout>