<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/info_detail_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/info_detail_main_title"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="@drawable/com_ttb_bg"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="18.0dip" android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/info_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:gravity="center"
        android:textColor="#ff000000"
        android:textSize="18.0dip" android:layout_gravity="center" android:layout_below="@id/info_detail_main_title"/>

    <TextView
        android:id="@+id/info_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10.0dip"
        android:textColor="#ff000000"
        android:textSize="14.0dip" android:layout_alignRight="@id/info_detail_title" android:layout_below="@id/info_detail_title"/>

    <TextView
        android:id="@+id/info_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#ff000000"
        android:textSize="16.0dip" android:layout_below="@id/info_detail_date"/>

</RelativeLayout>