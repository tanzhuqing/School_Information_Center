<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView android:id="@+id/kxjs_jxl_name"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:textColor="#FFFFFF"
            android:textSize="18dip" 
            android:gravity="center"
            android:background="@drawable/common_top_bg"
            android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/kxjs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/common_center_bg_dark"
        android:layout_below="@id/kxjs_jxl_name" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal"
        android:background="@drawable/common_bottom_bg"
        android:layout_alignParentBottom="true" >
        
        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_weight="1"
           android:gravity="center" > 
           
           <ImageView
              android:id="@+id/kxjs_image0"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
           </ImageView>
        
           <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFFFFF"
              android:textSize="12dip" 
              android:text="上午" />
        </LinearLayout>
  
        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_weight="1"
           android:gravity="center" >
           
           <ImageView
              android:id="@+id/kxjs_image1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
           </ImageView>
           
           <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFFFFF"
              android:textSize="12dip" 
              android:text="下午" />
        </LinearLayout>
        
        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_weight="1"
           android:gravity="center" > 
           
           <ImageView
              android:id="@+id/kxjs_image2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
           </ImageView>
           
           <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFFFFF"
              android:textSize="12dip" 
              android:text="晚上" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>